<div class="container">
  <div class="row">
    <%= render 'shared/invoice_navigation' %>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <!--<legend>Invoice Title:<span id="invoicetitledisplay"></span></legend>-->
    </div>
    <div class="col-sm-6" style="text-align: right;">
      &nbsp;
      <!-- <legend>Invoice Number:<span id="invoicenumberdisplay">00001</span></legend> -->
    </div>
    <%= form_tag("/invoices", method: "post", id: "atpay-invoicing") do %>
        <input type="hidden" value="0" name="atpay_invoice_uuid" id="atpay_invoice_uuid" >
        <div class="col-sm-4">&nbsp;</div>
        <div class="col-sm-8">
          <div class="col-lg-6 col-sm-6 col-12">
            <h4>Input Groups</h4>
            <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Browse&hellip; <input type="file" multiple>
                    </span>
                </span>
              <input type="text" class="form-control" readonly>
            </div>
          </div>
        </div>
        <div class="col-sm-12"><hr></div>
        <div class="col-sm-12">
            <div class="col-sm-4">&nbsp;</div>
            <div class="col-sm-4"><button type="submit" class="btn btn-primary btn-block">Submit all and request payment</button></div>
            <div class="col-sm-4">&nbsp;</div>
        </div>
        <!-- panel preview -->
        <% if false %>
            <div class="col-sm-5">
              <h4>Add Invoice Item:</h4>
              <div class="panel panel-default">
                <div class="panel-body form-horizontal payment-form">
                  <div class="form-group">
                    <label for="name" class="col-sm-3 control-label">Name</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="name" name="name">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="description" class="col-sm-3 control-label">Description</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="description" name="description">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="amount" class="col-sm-3 control-label">Amount</label>
                    <div class="col-sm-9">
                      <input type="number" class="form-control" id="amount" name="amount">
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="quantity" class="col-sm-3 control-label">Quantity</label>
                    <div class="col-sm-9">
                      <select class="form-control" id="quantity" name="quantity">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="date" class="col-sm-3 control-label">Date</label>
                    <div class="col-sm-9">
                      <input type="date" class="form-control" id="date" name="date">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12 text-right">
                      <button type="button" id="btnPreview" name="btnPreview" class="btn btn-default preview-add-button">
                        <span class="glyphicon glyphicon-plus"></span> Add
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div> <!-- / panel preview -->
            <div class="col-sm-7">
              <h4>Preview:</h4>
              <div class="row">
                <div class="col-xs-12">
                  <div class="table-responsive">
                    <table class="table preview-table">
                      <thead>
                      <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Amount</th>
                        <th>Date</th>
                      </tr>
                      </thead>
                      <tbody></tbody> <!-- preview content goes here-->
                    </table>
                  </div>
                </div>
              </div>
              <div class="row text-right">
                <div class="col-xs-12">
                  <h5>Subtotal: <strong><span class="preview-subtotal"></span></strong></h5>
                </div>
              </div>
              <div class="row text-right">
                <div class="col-xs-12">
                  <h5>Sales Tax @5.12%: <strong><span class="preview-tax"></span></strong></h5>
                </div>
              </div>
              <div class="row text-right">
                <div class="col-xs-12">
                  <h4>Total: <strong><span class="preview-total"></span></strong></h4>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <hr style="border:1px dashed #dddddd;">

                </div>
              </div>
            </div>
        <% end %>
    <% end %>
  </div>
</div>