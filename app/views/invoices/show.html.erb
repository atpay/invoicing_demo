<h1>Invoice Summary</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Customer Name</th>
    <th>Total Due</th>
    <th>Due Date</th>
  </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @invoice_summary.id %></td>
        <td><%= @invoice_summary.title %></td>
        <td><%= @invoice_summary.customer_name %></td>
        <td><%= number_to_currency(@invoice_summary.invoice_items.sum(:amount), :precision => 2) %></td>
        <td><%= @invoice_summary.created_at %></td>
      </tr>
  </tbody>
</table>
<hr />
<h3>Invoice Details</h3>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @invoice_summary.invoice_items.each do |invoiceItem| %>
      <tr>
        <td><%= invoiceItem.id %></td>
        <td><%= invoiceItem.name %></td>
        <td><%= invoiceItem.description %></td>
        <td><%= invoiceItem.quantity %></td>
        <td><%= number_to_currency(invoiceItem.amount, :precision => 2) %></td>
      </tr>
  <% end %>
  </tbody>
</table>