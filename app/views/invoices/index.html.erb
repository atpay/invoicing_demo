<h1>Invoices</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Customer Name</th>
    <th>Total Due</th>
    <th>Due Date</th>
  </tr>
  </thead>
  <tbody>
  <% @invoiceSummaries.each do |invoiceSummary| %>
      <tr>
        <td><%= invoiceSummary.id %></td>
        <td><%= link_to invoiceSummary.title, invoice_path(invoiceSummary) %></td>
        <td><%= invoiceSummary.customer_name %></td>
        <td><%= number_to_currency(invoiceSummary.invoice_items.sum(:amount), :precision => 2) %></td>
        <td><%= invoiceSummary.created_at %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New', new_invoice_path, :class => 'btn btn-primary' %>