<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <legend>Invoice Title:<span id="invoicetitledisplay"></span></legend>
    </div>
    <div class="col-sm-6" style="text-align: right;">
      <legend>Invoice Number:<span id="invoicenumberdisplay">00001</span></legend>
    </div>
    <form action="/submit" method="POST" id="atpay-invoicing">
        <div class="col-sm-4"><input type="text" class="form-control" id="invoicetitle" placeholder="Invoice Title" name="invoicetitle"> </div>
        <div class="col-sm-4"><input type="text" class="form-control" id="invoicenumber" name="invoicenumber" placeholder="00001"></div>
        <div class="col-sm-4"><input type="text" class="form-control" id="invoiceduedate" name="invoiceduedate" placeholder="Due Date"></div>
        <div class="col-sm-12">&nbsp;</div>
        <div class="col-sm-6"><input type="text" class="form-control" id="invoicecustomername" name="invoicecustomername" placeholder="Customer Name"></div>
        <div class="col-sm-6"><input type="text" class="form-control" id="invoicecustomeremail" name="invoicecustomeremail" placeholder="Customer Email"></div>
        <div class="col-sm-12"><hr></div>
        <!-- panel preview -->
        <div class="col-sm-5">
          <h4>Add payment:</h4>
          <div class="panel panel-default">
            <div class="panel-body form-horizontal payment-form">
              <div class="form-group">
                <label for="name" class="col-sm-3 control-label">Name</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="name" name="name">
                </div>
              </div>
              <div class="form-group">
                <label for="description" class="col-sm-3 control-label">Description</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="description" name="description">
                </div>
              </div>
              <div class="form-group">
                <label for="amount" class="col-sm-3 control-label">Amount</label>
                <div class="col-sm-9">
                  <input type="number" class="form-control" id="amount" name="amount">
                </div>
              </div>
              <div class="form-group">
                <label for="status" class="col-sm-3 control-label">Status</label>
                <div class="col-sm-9">
                  <select class="form-control" id="status" name="status">
                    <option>Paid</option>
                    <option>Unpaid</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="date" class="col-sm-3 control-label">Date</label>
                <div class="col-sm-9">
                  <input type="date" class="form-control" id="date" name="date">
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12 text-right">
                  <button type="button" class="btn btn-default preview-add-button">
                    <span class="glyphicon glyphicon-plus"></span> Add
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- / panel preview -->
        <div class="col-sm-7">
          <h4>Preview:</h4>
          <div class="row">
            <div class="col-xs-12">
              <div class="table-responsive">
                <table class="table preview-table">
                  <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th>Date</th>
                  </tr>
                  </thead>
                  <tbody></tbody> <!-- preview content goes here-->
                </table>
              </div>
            </div>
          </div>
          <div class="row text-right">
            <div class="col-xs-12">
              <h4>Total: <strong><span class="preview-total"></span></strong></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12">
              <hr style="border:1px dashed #dddddd;">
              <button type="submit" class="btn btn-primary btn-block">Submit all and request payment</button>
            </div>
          </div>
        </div>
      </form>
  </div>
</div>